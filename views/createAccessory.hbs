<main>
    <h1 style="margin-left: 0.5em">Create Accessory</h1>
    <div class="create-form">
        <form action='/accessories/create' method="POST">

            <label for="name">Име:</label>
            <input type="text" id="name" placeholder="Име" name="name"/>

            <label for="description">Описание:</label>
            <textarea id="description" placeholder="Описание" name="description"></textarea>

            <label for="mainImageUrl">Изображение:</label>
            <input type="text" id="mainImageUrl" placeholder="mainImageUrl" name="mainImageUrl">

            <label for="price">Цена:</label>
            <input type="number" id="price" placeholder="Цена" name="price"/>
            
            <input type="submit" value="Create">
        </form>
    </div>
</main>